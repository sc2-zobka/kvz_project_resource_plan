<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Project Form View -->
    <record id="project_project_form_inherit_view" model="ir.ui.view">
        <field name="name">project.project.form.inherit.resource.line</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Resources" name="tec_page">
                    <field name="resource_line_ids">
                        <tree editable="bottom">
                            <field name="employee_id" options="{'no_create': True}" />
                            <field name="role_id" options="{'no_create': True}" />
                            <field name="employee_id" options="{'no_create': True}" />
                            <field name="price_per_hour" />
                            <field name="employee_cost" />
                            <field name="currency_id" column_invisible="1" />
                            <field name="quantity_hours" />
                            <field name="subtotal_price" string="Subtotal Price" />
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_resource_amount" string="Total" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Inherit Sale Project Form View -->
    <record id="project_project_form_inherit_sale_project" model="ir.ui.view">
        <field name="name">project.project.form.inherit.sale.project.revenue.cost</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="sale_project.view_edit_project_inherit_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_sales_invoicing']" position="after">
            <group name="group_revenue_cost" string="Revenue &amp; Cost Report" col="1" class="row mt16 o_settings_container col-lg-6">
                <div>
                    <setting class="col-lg-12" help="Enable revenue and cost reporting for this project">
                        <field name="revenue_and_cost_report"/>
                    </setting>
                </div>
            </group>
        </xpath>
        </field>
    </record>
</odoo>