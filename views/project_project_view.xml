<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Project Form View -->
    <record id="project_project_form_inherit_view" model="ir.ui.view">
        <field name="name">project.project.form.inherit.resource.line</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Resources" name="tec_page">
                    <field name="resource_line_ids">
                        <tree editable="bottom">
                            <field name="employee_id" options="{'no_create': True}" />
                            <field name="role_id" options="{'no_create': True}" />
                            <field name="price_per_hour" />
                            <field name="employee_cost" />
                            <field name="currency_id" column_invisible="1" />
                            <field name="quantity_hours" />
                            <field name="subtotal_price" string="Subtotal Price" />
                        </tree>
                    </field>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_resource_amount" string="Total" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>